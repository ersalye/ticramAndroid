<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/linBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/round_white"
        style="@style/MainTheme.layout">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:orientation="horizontal">




            <LinearLayout
                android:id="@+id/kolha_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/lay1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lin_tax_yellow"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circle_blankhdpi"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/icon_yellow_taxi"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/img_taxi" />

                            <TextView
                                android:id="@+id/tv_yellow_taxi"
                                style="@style/MainTheme.ButtonStyleLogin.mainText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_marginBottom="15dp"
                                android:text="---" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_count_yellow"
                        style="@style/MainTheme.ButtonStyleLogin.mainText"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@+id/lay1"
                        android:background="@drawable/green_circle"
                        android:gravity="center"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimary"
                        android:visibility="gone"
                        android:text="10" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/kolha_khas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/linSubTaxi"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lin_tax_khas"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circle_blankhdpi"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/icon_khas_taxi"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/img_taxi" />

                            <TextView
                                android:id="@+id/tv_khas_taxi"
                                style="@style/MainTheme.ButtonStyleLogin.mainText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_marginBottom="15dp"
                                android:text="خاص" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_Count_khas"
                        style="@style/MainTheme.ButtonStyleLogin.mainText"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@+id/linSubTaxi"
                        android:background="@drawable/green_circle"
                        android:gravity="center"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimary"
                        android:visibility="gone"
                        android:text="10" />
                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/kolha_momayaz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/lin_tax_momayaz"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linChange"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circle_blankhdpi"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/icon_momayaz_taxi"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/img_taxi" />

                            <TextView
                                android:id="@+id/tv_momayaz_taxi"
                                style="@style/MainTheme.ButtonStyleLogin.mainText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_marginBottom="15dp"
                                android:text="خاص" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_Count_momyaz"
                        style="@style/MainTheme.ButtonStyleLogin.mainText"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignLeft="@+id/lin_tax_momayaz"
                        android:background="@drawable/green_circle"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:visibility="gone"
                        android:text="10" />

                </RelativeLayout>
            </LinearLayout>




            <LinearLayout
                android:id="@+id/kolha_kahraba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/lay4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lin_kahraba"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circle_blankhdpi"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/icon_kahraba"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/img_taxi" />

                            <TextView
                                android:id="@+id/tv_kahraba"
                                style="@style/MainTheme.ButtonStyleLogin.mainText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_marginBottom="15dp"
                                android:text="خاص" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_count_kahraba"
                        style="@style/MainTheme.ButtonStyleLogin.mainText"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@+id/lay4"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/green_circle"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:visibility="gone"
                        android:text="10" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
           android:id="@+id/order_info"
            android:layoutDirection="ltr"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cash"
                    android:drawableLeft="@drawable/moremdpi"
                    android:drawableRight="@drawable/cashmdpi"
                    android:textSize="12dp"
                    android:drawablePadding="5dp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/gray60"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="@string/expected_fee" />

                <TextView
                    android:id="@+id/tv_expected_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="@color/green"
                    android:text="-" />


            </LinearLayout>




            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/gray60"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="@string/timeanddistance"/>
            <LinearLayout
                android:id="@+id/lay_dis_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - " />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="12dp" />

            </LinearLayout>

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tawaklna"
        android:clickable="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_tawaklna"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tawklna"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/rounded_corner_green"/>
    </LinearLayout>

</LinearLayout>